<!doctype html>
<html lang="en">
<head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>Academic Claims System - @ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUa6zsA2X0p3Yl6Nf3zY1q4/8f2Q5u9c1Kq6sVY5q1W9u3Q2mZ6G7r9K1Wj4" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-papm6Q+1Qw1Qw1Qw1Qw1Qw1Qw1Qw1Qw1Qw1Qw1Qw1Qw1Qw1Qw1Qw1Qw1Qw1Qw1Qw1Qw1Qw1Qw1Qw1Qw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <link rel="stylesheet" href="/css/site.css" />
</head>
<body class="bg-light">
        <nav class="navbar navbar-expand-lg navbar-dark" style="background: linear-gradient(90deg,#0b5ed7,#6610f2);">
            <div class="container">
                        <a class="navbar-brand fw-bold d-flex align-items-center" href="/">
                            <span class="me-2 navbar-logo">
                                <i class="fa-solid fa-graduation-cap fa-lg" style="color: #fff;"></i>
                            </span>
                            <span>Academic Claims System</span>
                        </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav" aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNav">
                    @{
                        var currentController = ViewContext.RouteData.Values["controller"]?.ToString() ?? "Home";
                        string Active(string ctrl) => string.Equals(ctrl, currentController, StringComparison.OrdinalIgnoreCase) ? "active" : "";
                        var currentRole = Context.Request.Cookies["CurrentRole"] ?? "Lecturer";
                    }
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 align-items-lg-center">
                        <li class="nav-item"><a class="nav-link text-white @Active("Home")" href="/">Home</a></li>
                        <li class="nav-item"><a class="nav-link text-white @Active("Lecturer")" href="/Lecturer/Submit">Submit Claim</a></li>
                        <li class="nav-item"><a class="nav-link text-white @Active("Lecturer")" href="/Lecturer/Upload">Upload Docs</a></li>
                        <li class="nav-item dropdown">
                            <button class="nav-link text-white dropdown-toggle btn btn-link p-0" id="rolesDropBtn" data-bs-toggle="dropdown" aria-expanded="false" type="button">Roles</button>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="rolesDropBtn">
                                <li class="px-3 py-2">
                                    <form method="post" asp-controller="Role" asp-action="Set">
                                        <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                                        <div class="mb-2">
                                            <select name="role" class="form-select form-select-sm">
                                                @{ 
                                                    if(currentRole == "Lecturer") {
                                                        <text><option value="Lecturer" selected>Lecturer</option></text>
                                                    } else {
                                                        <text><option value="Lecturer">Lecturer</option></text>
                                                    }

                                                    if(currentRole == "ProgramCoordinator") {
                                                        <text><option value="ProgramCoordinator" selected>Program Coordinator</option></text>
                                                    } else {
                                                        <text><option value="ProgramCoordinator">Program Coordinator</option></text>
                                                    }

                                                    if(currentRole == "AcademicManager") {
                                                        <text><option value="AcademicManager" selected>Academic Manager</option></text>
                                                    } else {
                                                        <text><option value="AcademicManager">Academic Manager</option></text>
                                                    }
                                                }
                                            </select>
                                        </div>
                                        <div class="text-end">
                                            <button class="btn btn-sm btn-primary" type="submit">Switch</button>
                                        </div>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    </ul>
                    <div class="d-flex align-items-center">
                        <div class="me-3 text-white small">Role: <strong>@currentRole</strong></div>
                    </div>
                </div>
            </div>
        </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

            <footer class="mt-5 py-4 bg-white border-top">
                <div class="container text-center small footer-quiet">Â© Academic Claims System</div>
            </footer>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoA6VZb1z0h2xQ4o2Z6q3mR5p6y7u8Q3e1K6m9J1x2v3w4c" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJ+Y7n0y0mY6pQZ6kGk0xH5j1Z2Zz3I9k3X+8=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js" integrity="sha512-/VZQKqK5mVg/0tKQk1xH6a" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js" integrity="sha512-1BMZq" crossorigin="anonymous"></script>
</body>
</html>
