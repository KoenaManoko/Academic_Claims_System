@model ClaimingSystem.Models.Claim
@{
    ViewData["Title"] = "Approve Claim";
}
<div class="card">
    <h2>Approve Claim</h2>
    <p><strong>Id:</strong> @Model.Id</p>
    <p><strong>Lecturer:</strong> @Model.LecturerName</p>
    <p><strong>Program:</strong> @Model.Program</p>
    <p><strong>Status:</strong> @Model.Status</p>
    @{ var currentRole = Context.Request.Cookies["CurrentRole"] ?? "Lecturer"; }
    @if(currentRole == "AcademicManager"){
        <form method="post" asp-action="ApproveConfirm" asp-controller="AcademicManager">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-primary-custom">Approve</button>
        </form>
    } else {
        <button class="btn btn-secondary" disabled>Only Academic Managers can approve</button>
    }
</div>
